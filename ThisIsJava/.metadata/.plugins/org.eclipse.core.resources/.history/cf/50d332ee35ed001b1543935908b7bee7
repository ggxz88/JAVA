package chap12.section02;

import java.awt.Toolkit;

public class BeepThread extends Thread {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		@Override
		public void run() {
			Toolkit toolkit = Toolkit.getDefaultToolkit();
			for (int i = 0; i < 5; i++) {
				toolkit.beep();
				try {
					Thread.sleep(500);
				} catch (Exception e) {
					
				}
			}
		}
	}

}
